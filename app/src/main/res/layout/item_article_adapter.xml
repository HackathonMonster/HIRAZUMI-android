<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_article_height">

    <LinearLayout
        android:id="@+id/item_article_layout_left"
        android:layout_width="@dimen/item_article_height"
        android:layout_height="match_parent"
        android:background="@color/tab_search"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/item_article_textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/element_spacing_normal"
            android:text="2015-03-07"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/item_article_imageview_icon"
            android:layout_width="@dimen/view_size_large"
            android:layout_height="@dimen/view_size_large"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/item_book_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/item_book_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_gravity="center_horizontal" />

</LinearLayout>