<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_article">

    <ImageView
        android:id="@+id/item_article_imageview_icon"
        android:layout_width="@dimen/item_article_icon_size"
        android:layout_height="@dimen/item_article_icon_size"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:paddingBottom="@dimen/item_article_icon_padding"
        android:paddingLeft="@dimen/item_article_icon_padding"
        android:paddingRight="@dimen/item_article_icon_padding"
        android:paddingTop="@dimen/item_article_icon_padding"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/element_spacing_normal"
        android:paddingRight="@dimen/element_spacing_normal"
        android:paddingTop="@dimen/element_spacing_normal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_article_textview_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="punchdrunker"
                android:textSize="@dimen/text_size_small" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_article_textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-12-29" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_article_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            android:singleLine="false"
            android:text="いつかスマフォアプリを作ってみたいと思ってる、非エンジニアにこの冬おすすめしたい入門書"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/item_article_textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            android:ellipsize="end"
            android:lines="3"
            android:text="TL;DRアプリ開発の入門するには、オブジェクト指向(クラス?メソッド?プロパティ?)を理解してからの方が早い(けどわからないまま進める人もいるので人による)\nいろんな入門書があるけど、何だかんだ、回りに質問できる人がいるかどうかが重要プログラミングなら何でもいいからとにかく1ヶ月くらい継続できるものを見つけてみようはじめに来年 2015年1月からミクシィではアプリ開発未経験エンジニア向けにAndroid/iOSアプリの勉強会を開くのですが、プログ..."
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Qiita.com"
            android:id="@+id/item_article_textview_source"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/element_spacing_small" />

    </LinearLayout>

</LinearLayout>