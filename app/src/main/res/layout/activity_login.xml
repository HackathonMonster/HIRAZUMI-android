<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Twitter #33B0E4  -->
    <Button
        android:id="@+id/login_button_twitter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/login_vertical_margin_bottom"
        android:background="#33B0E4"
        android:drawableLeft="@drawable/ic_twitter"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/login_twitter"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_large" />

    <!-- Dribble #ED5694 -->
    <Button
        android:id="@+id/login_button_dribble"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_normal"
        android:layout_above="@+id/login_button_twitter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="#ED5694"
        android:drawableLeft="@drawable/ic_dribble"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/login_dribble"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_large" />

    <!-- GitHub #000000 -->
    <Button
        android:id="@+id/login_button_github"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_normal"
        android:layout_above="@+id/login_button_dribble"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="#000000"
        android:drawableLeft="@drawable/ic_github"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/login_github"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_size_large" />

    <ImageView
        android:id="@+id/login_imageview_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/img_icon" />

    <TextView
        android:id="@+id/login_textview_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_imageview_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:letterSpacing="0.4"
        android:text="HIRAZUMI"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/text_size_xlarge"
        android:textStyle="bold" />


</RelativeLayout>
